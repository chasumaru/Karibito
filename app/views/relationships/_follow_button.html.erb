<section id="follow_button">
  <% if current_user.following?(user) %>
    <%= form_with(model: current_user.active_relationships.find_by(followed_id: user.id), html: { method: :delete }) do |f| %>
      <p class="text-slate-800 bg-white border-2 border-slate-300 font-extrabold rounded-3xl px-6 py-2 mr-2 mb-2 focus:outline-none"><%= f.submit "フォロー中" %></p>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.active_relationships.build) do |f| %>
      <div><%= hidden_field_tag :followed_id, user.id %></div>
      <p class="text-slate-800 bg-slate-300 font-extrabold rounded-3xl px-4.5 py-2.5 mr-2 mb-2 focus:outline-none"><%= f.submit "フォローする" %></p>
    <% end %>
  <% end %>
</section>