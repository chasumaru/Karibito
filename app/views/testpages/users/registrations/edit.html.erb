<h1>プロフィールの変更</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, local: true) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>メール認証を完了してください : <%= resource.unconfirmed_email %></div>
  <% end %>


  <div class="field">
    <%= f.label :profile, "プロフィール文" %><br />
    <%= f.text_area :profile, autofocus: true %>
  </div>
  

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>
<%= render "users/shared/links" %>

<%# 退会リンクはサイドバーにのみ表示する %>
<div class="actions">
   <%= button_to "退会する", registration_path(resource_name), { method: :delete, form: { data: { turbo_confirm: "本当によろしいですか？" } } } %>
</div>
 

<%= link_to "戻る", :back %>
