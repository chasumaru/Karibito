        <div class="text-center">
            <h1 class="font-bold text-center text-gray-700 ">新規登録</h1>
        </div>
<div class="flex w-full lg:w-1/2 justify-center items-center space-y-8 bg-white dark:bg-gray-800">
    <div class="flex-1 px-8 md:px-32 lg:px-24">
        <div class="mt-8 bg-white rounded-md shadow-md p-5">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 
            <%= render "users/shared/error_messages", resource: resource %>
                <div class="field">
                  <%= f.label :name, "ユーザー名", class: "block text-lg font-bold text-gray-600 dark:text-gray-200" %>
                  <%= f.text_field :name, autofocus: true, autocomplete: "name" ,placeholder: "山本太郎", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
                </div>

                <div class="field mt-6">
                    <%= f.label :email, "メールアドレス", class: "text-lg font-bold text-gray-600 dark:text-gray-200"%>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "example@gmail.com",class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
                </div><br>

                <div class="field">
                    <div class="flex justify-between">
                        <%= f.label :password, "パスワード" ,class: "text-lg font-bold text-gray-600 dark:text-gray-200" %>
                        <% if @minimum_password_length %>
                        <div class="text-sm text-gray-400 mt-2 ml-16">(<%= @minimum_password_length %>~32桁までの半角英数字)</div>
                        <% end %><br />
                    </div>
                    <%= f.password_field :password ,autocomplete: "new-password" ,placeholder: "New Password" ,class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
                </div><br>

                <div class="field">
                    <div class="flex justify-between">
                        <%= f.label :password_confirmation, "パスワード(確認用)", class: "text-lg font-bold text-gray-600 dark:text-gray-200" %>
                    </div>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
                </div><br>

                <div class="submit_button my-6 ">
                    <%= f.submit "新規登録" ,class: "form-button" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
<%= render "users/shared/links" %>