<h2>ユーザー編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <% f.label :email %><i>Eメール</i><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <% f.label :password %> <i>新しいパスワード</i>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>~20桁の半角英数字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <% f.label :password_confirmation %> <i>パスワード(確認用)</i><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <% f.label :current_password %> <i>現在のパスワード</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "変更" %>
  </div>
<% end %>

<h3>アカウント削除</h3>

 <%= button_to "削除", registration_path(resource_name), data: { confirm: "本当によろしいですか?" }, method: :delete %>

