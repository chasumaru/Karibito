<% if resource.errors.any? %>
  <div id='error_explanation'>
    <ul class='list-disc bg-red-100 border border-red-400 text-red-700 px-6 py-3 rounded relative' role='alert'>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
