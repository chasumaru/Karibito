
<div class="text-center">
    <h1 class=" font-bold text-center text-gray-700 dark:text-white">ログイン</h1>
</div>

<div class="flex w-full lg:w-1/2 justify-center items-center bg-white space-y-8 ">
    <div class="flex-1 w-full px-8 md:px-32 lg:px-24">
        <div class="mt-8 bg-white rouded-md shadow-md p-5">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
                <div class="field">
                  <%= f.label :email, "メールアドレス", class: "block mb-2 text-lg text-gray-600 dark:text-gray-200" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "example@gmail.com", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
                </div>

                <div class="field mt-6">
                    <div class="flex justify-between ">
                        <%= f.label :password, "パスワード" ,class: "text-lg text-gray-600 dark:text-gray-200"%>
                        <%= link_to "パスワードをお忘れですか?" ,new_user_password_path ,class: "text-sm text-gray-400 focus:text-blue-500 hover:text-blue-500 hover:underline" %>
                    </div>
                    <%= f.password_field :password ,autocomplete: "current-password" ,placeholder: "Your Password" ,class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
                </div><br>
                <% if devise_mapping.rememberable? %>
                  <div class="remember">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember, "ログインしたままにする" ,class: "text-sm text-gray-600 focus:text-blue-500 hover:text-blue-500 hover:underline" %>
                  </div>
                <% end %>
                <div class="mt-6">
                        <%= f.submit "ログイン" ,class: "w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50" %>
                </div>

                <div class="mt-3">
                  <p class="text-sm text-center text-gray-400">Karibitoは初めてですか？ <%= link_to "アカウントを作成", new_user_registration_path, class: "text-blue-500 focus:outline-none focus:underline hover:underline" %></p>
                </div>
            <% end %>
        </div>
    </div>
</div>
<%= render "users/shared/links" %>