<% provide(:title, 'ログイン') %>
<div class='mt-14 mb-10 animate-fade-in'>
  <h1 class='font-bold text-center'>ログイン</h1>
  <div class='flex w-full items-center space-y-8' data-turbo='false'>
      <div class='flex-1 px-8 md:px-32 lg:px-24'>
          <div class='my-8 bg-white rounded-md shadow-md p-5'>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= render 'users/shared/error_messages', resource: resource %>
                  <div class='field'>
                    <%= f.label :email, 'メールアドレス', class: ' block text-lg font-bold text-gray-600 dark:text-gray-200' %>
                    <%= f.email_field :email, autofocus: true, autocomplete: 'email' ,placeholder: 'example@gmail.com', class: 'block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md  focus:border-blue-400  focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40 dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 dark:focus:border-blue-400' %>
                  </div>

                  <div class='field mt-6'>
                      <div class='flex justify-between mb-2'>
                          <%= f.label :password, 'パスワード' ,class: 'w-32 text-lg font-bold text-gray-600 dark:text-gray-200' %>
                          <div class='-mb-2 ml-8'>
                            <%= link_to 'パスワードをお忘れですか?' ,new_user_password_path ,class: 'text-sm text-gray-400 focus:text-blue-500 hover:text-blue-500 hover:underline' %>
                          </div>
                      </div>
                      <%= f.password_field :password ,autocomplete: 'current-password' ,placeholder: 'Your Password' ,class: 'block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md  focus:border-blue-400  focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40 dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 dark:focus:border-blue-400' %>
                  </div><br>
                  <% if devise_mapping.rememberable? %>
                    <div class='remember text-center mb-4'>
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember, 'ログインしたままにする' ,class: 'text-sm text-gray-600 focus:text-blue-500 hover:text-blue-500 hover:underlinem' %>
                    </div>
                  <% end %>
                  <div class='form-button'>
                    <%= f.submit 'ログイン' ,class: 'w-full px-4 py-2 tracking-wide duration-200 transform bg-green-200 rounded-md hover:bg-green-100 focus:outline-none focus:bg-green-100 focus:ring focus:ring-green-100 focus:ring-opacity-50 mb-4', id: 'login_btn' %>
                  </div>
                  <div class='mt-4'>
                    <p class='text-sm text-center text-gray-400'>Karibitoは初めてですか？ <%= link_to 'アカウントを作成', new_user_registration_path, class: 'text-blue-500 focus:outline-none focus:underline hover:underline' %></p>
                  </div>
              <% end %>
          </div>
      </div>
  </div>
</div>