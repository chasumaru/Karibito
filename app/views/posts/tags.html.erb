<div class='grid grid-cols-1 justify-center mx-2 mt-14 mb-10'>
  <h2 class='inline-flex justify-center font-bold mb-2'>タグ一覧</h2>
  <div class='grid grid-cols-1 sm:grid-cols-2 justify-center mx-2 py-2 my-3 border-2 rounded-md'>
    <% @tags.each do |t| %>
      <p class='inline-flex justify-center font-medium hover:underline mb-2'><%= link_to t, posts_path(tag_name: t.name), class:'font-medium hover:underline mb0.5' %><%= "(#{t.taggings_count})" %></p>
    <% end %>
  </div>
</div>
