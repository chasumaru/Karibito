<%# リプライコメントの場合、parent_comment_#{commnet.id}要素にappendし、そうでない場合はcomments要素にappendする。 %>
<% if @comment.reply_comment_id.present? %>
  <%= turbo_stream.append "parent_comment_#{@comment.reply_comment_id}" do %>
    <%= render partial: "posts/reply", locals: {reply: @comment} %>
  <% end %>
  <%= turbo_stream.replace "new_reply" do %>
    <%= render partial: "posts/new_reply", locals: {post: @post, comment: @comment} %>
  <% end %>
<% else %>
  <%= turbo_stream.append "comments" do %>
    <%= render partial: "posts/comment_block", locals: {comment: @comment} %>
  <% end %>
  <%= turbo_stream.replace "new_comment" do %>
    <%= render partial: "posts/new_comment" , locals: {post: @post} %>
  <% end %>
  <%= turbo_stream.update "no_comments" , "" %>
<% end %>
<%= turbo_stream_flash %>