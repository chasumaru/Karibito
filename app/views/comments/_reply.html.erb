<div class="grid grid-cols-1" id="reply_<%="#{reply.id}"%>">
  <div class="flex border-b ml-10  pb-2 mb-1">
    <div class="flex justify-center w-12">
      <%= avatar_link(reply) %>
    </div>
    <div class="flex flex-col w-full">
      <div class="flex">
        <strong><%= reply.user.name %></strong>
        <p class="text-slate-400 ml-3"><%= how_long_ago(reply) %></p>
      </div>
      <div class="relative pb-4 w-4/5">
        <%= render partial: "comments/reply_content", locals: {reply: reply} %>
        <% if user_signed_in? && current_user == reply.user %>
          <span class="absolute bottom-1 right-2 inline-flex justify-center w-11 h-6 px-2 py-1 ml-1 border border-red-400 text-red-400 font-bold text-xs leading-tight uppercase rounded-full hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out no-tap-highlighting">
            <%= button_to "削除", post_comment_path(@post, reply), { method: :delete, form: { data: { turbo_confirm: "コメントを削除しますか？" } } } %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>