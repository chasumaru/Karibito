<% if object.errors.any? %>
  <div id='error_explanation'>
    <ul class='list-disc bg-red-100 border border-red-400 text-red-700 px-6 py-2 rounded relative text-sm' role='alert'>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>